<!-- layout1 -->
<%= form_for(@user) do |f| %>
        <div class="row">
          <div class="col-xs-12">
            <h2>User info</h2>
              <div class="form-group">
                <label class="control-label" for="InputTextarea">Name</label>
                <%= f.text_field :name, autofocus: true, class:"form-control", id:"InputTextarea" %>
              </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12" style="height:4em;">
            <label for="InputFile">Image</label>
            <%= f.attachment_field :profile_image %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12">
            <div class="form-group">
              <label class="col-xs-4 control-label" for="InputTextarea">Introduction</label>
                <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"InputTextarea", rows:"5" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <%= f.submit("Update User", class: "btn btn-primary btn-block") %>
          </div>
        </div>
<% end %>

