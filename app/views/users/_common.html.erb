<div class="container">
  <div class="row">

    <div class="row">
      <div class="col-xs-12">
          <% if book.errors.any? %>
          <div id="error_explanation">
            <h2><%= book.errors.count %>error prohibited this book from being saved:</h2>
            <ul class="message">
            <% book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
          <% end %>
      </div>
    </div>

    <div class="col-xs-3">
      <div class="row">

      <div class="row">
        <div class="col-xs-12">
          <h2>User info</h2>
          <table class='table'>
            <tr>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg"%>
            </tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </table>
          <% if user == current_user %>
            <%= link_to edit_user_path(current_user) do %>
            <button type="button" class="btn btn-default btn-block">
              <i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>
            </button>
            <% end %>

          <% else %>
            <%= link_to user_path(user) do %>
            <button type="button" class="btn btn-default btn-block">
              <i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>
            </button>
            <% end %>
          <% end %>
        </div>
      </div>

      <%= form_for(book) do |f| %>
        <div class="row">
          <div class="col-xs-12">
            <h2>New book</h2>
              <div class="form-group">
                <label for="InputTextarea">Title</label>
                <%= f.text_area :title, class:"form-control", id:"InputTextarea", rows:"1" %>
              </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="form-group">
              <label for="InputTextarea">Opinion</label>
                <%= f.text_area :body, class:"form-control", id:"InputTextarea", rows:"3" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <%= f.submit("Create Book", class: "btn btn-primary btn-block") %>
          </div>
        </div>
          <% end %>
      </div>
    </div>
